---
import { Image } from "astro:assets";
import imgAptos1 from "../img/slider/aptos/reales/1-104m2.jpg";
import imgAptos2 from "../img/slider/aptos/reales/2-104m2.jpg";
import imgAptos3 from "../img/slider/aptos/reales/3-104m2.jpg";
import imgAptos5 from "../img/slider/aptos/reales/5-104m2.jpg";
import imgAptos6 from "../img/slider/aptos/reales/6-104m2.jpg";
import imgAptos7 from "../img/slider/aptos/reales/7-104m2.jpg";
import imgAptos8 from "../img/slider/aptos/reales/1-104m2.jpg";
import imgAptos9 from "../img/slider/aptos/reales/9-104m2.jpg";
import imgAptos10 from "../img/slider/aptos/reales/8-104m2.jpg"
import imgAptos11 from "../img/slider/aptos/reales/9-104m2.jpg"
import imgAptosHab from "../img/slider/aptos/reales/hab 2 104m2.jpg";
---

<div class="f-carousel" id="myCarouselApto">
    <div class="f-carousel__slide">
        <Image src={imgAptos6} alt="Img 1" />
    </div>
    <div class="f-carousel__slide">
        <Image src={imgAptos3} alt="Img 2" />
    </div>
    <div class="f-carousel__slide">
        <Image src={imgAptos5} alt="Img 3" />
    </div>
    <div class="f-carousel__slide">
        <Image src={imgAptos1} alt="Img 5" />
    </div>
    <div class="f-carousel__slide">
        <Image src={imgAptos7} alt="Img 6" />
    </div>
    <div class="f-carousel__slide">
        <Image src={imgAptos10} alt="Img 7" />
    </div>
    <div class="f-carousel__slide">
        <Image src={imgAptos9} alt="Img 8" />
    </div>
    <div class="f-carousel__slide">
        <Image src={imgAptosHab} alt="Img 8" />
    </div>
    <div class="f-carousel__slide">
        <Image src={imgAptos7} alt="Img 9" />
    </div>
    <div class="f-carousel__slide">
        <Image src={imgAptos2} alt="Img Hab" />
    </div>
</div>
<style>
    #myCarouselApto {
        --f-carousel-slide-height: 60%;
        --f-carousel-spacing: 10px;

        height: 35vh;
    }
    .f-carousel {
        --f-button-width: 38px;
        --f-button-height: 38px;

        --f-button-svg-width: 16px;
        --f-button-svg-height: 16px;
        --f-button-svg-stroke-width: 2.5;

        --f-button-color: #e7e7e7;
        --f-button-border-radius: 50%;
        --f-button-shadow: 0 6px 12px -2px rgb(50 50 93 / 25%),
            0 3px 7px -3px rgb(0 0 0 / 30%);

        --f-button-bg: #20355e;
        --f-button-hover-bg: #20355ee0;
        --f-button-active-bg: #20355e;

        object-fit: cover;
    }
    .f-carousel img {
        height: 35vh;
        object-fit: cover;
    }

    @media (min-width: 426px) and (max-width: 800px){
        #myCarouselApto {
            height: 70vh;
        }

        .f-carousel img {
            height: 70vh;
            object-fit: cover;
         }
    }

    @media screen and (min-width: 769px){
        #myCarouselApto {
            height: 100vh;
        }

       .f-carousel img {
            height: 100vh;
            width: 100%;
            object-fit: cover;
         }
    }
</style>
<script>
    import { Carousel } from "@fancyapps/ui/dist/carousel/carousel.esm.js";
    import "@fancyapps/ui/dist/carousel/carousel.css";

    const container = document.getElementById("myCarouselApto");
    const options = { infinite: true };

    new Carousel(container, options);
</script>
