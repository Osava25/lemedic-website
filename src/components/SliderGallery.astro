---
import { Image } from "astro:assets";
import imgZonasComunes1 from "../img/slider/zonas-comunes/slide-nov-1.jpg";
import imgZonasComunes2 from "../img/slider/zonas-comunes/slide-nov-2.jpg";
import imgZonasComunes3 from "../img/slider/zonas-comunes/slide-nov-3.jpg";
---

<div class="f-carousel" id="myCarousel">
    <div class="f-carousel__slide">
        <Image src={imgZonasComunes3} alt="Img 1" />
    </div>
    <div class="f-carousel__slide">
        <Image src={imgZonasComunes2} alt="Img 2" />
    </div>
    <div class="f-carousel__slide">
        <Image src={imgZonasComunes1} alt="Img 3" />
    </div>
</div>
<style>
    #myCarousel {
        --f-carousel-slide-height: 60%;
        --f-carousel-spacing: 10px;

        height: 35vh;
    }
    .f-carousel {
        --f-button-width: 38px;
        --f-button-height: 38px;

        --f-button-svg-width: 16px;
        --f-button-svg-height: 16px;
        --f-button-svg-stroke-width: 2.5;

        --f-button-color: #e7e7e7;
        --f-button-border-radius: 50%;
        --f-button-shadow: 0 6px 12px -2px rgb(50 50 93 / 25%),
            0 3px 7px -3px rgb(0 0 0 / 30%);

        --f-button-bg: #00B8B1;
        --f-button-hover-bg: #00DCB8;
        --f-button-active-bg: #00DCB8;

        object-fit: cover;
    }
    .f-carousel img {
        height: 35vh;
        object-fit: cover;
    }

    @media (min-width: 426px) and (max-width: 800px){
        #myCarousel {
            height: 70vh;
        }

        .f-carousel img {
            height: 70vh;
            object-fit: cover;
         }
    }

    @media screen and (min-width: 769px){
        #myCarousel {
            height: 100vh;
        }

        .f-carousel img {
            height: 100vh;
            width: 100%;
            object-fit: cover;
         }
    }
</style>
<script>
    import { Carousel } from "@fancyapps/ui/dist/carousel/carousel.esm.js";
    import "@fancyapps/ui/dist/carousel/carousel.css";

    const container = document.getElementById("myCarousel");
    const options = { infinite: true };

    new Carousel(container, options);
</script>
