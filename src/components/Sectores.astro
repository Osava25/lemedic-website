---
import type { ImageMetadata } from 'astro';
import { Image } from "astro:assets";
const { entorno } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/img/entorno/*.{jpeg,jpg,png,gif}')
if (!images[entorno.img]) throw new Error(`"${entorno.img}" does not exist in glob: "src/img/entorno/*.{jpeg,jpg,png,gif}"`);
---

<div class="w-1/2 xl:w-1/3 p-4">
    <Image class="h-24 xl:h-44 object-cover" src={images[entorno.img]()} alt={entorno.alt} />
    <h4 class="mt-4 text-verde-lemedic-300 uppercase text-left font-bold">
        {entorno.title}
    </h4>
    <p class="font-light text-left">{entorno.description}</p>
    <p class="font-light text-left mt-2">{entorno.description2}</p>
    <p class="font-light text-left mt-2">{entorno.description3}</p>
    <p class="font-bold text-left">{entorno.dist}</p>
</div>
